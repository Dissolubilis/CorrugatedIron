<configuration>
    <configSections>
        <section name="riak1NodeConfiguration" type="CorrugatedIron.Config.RiakClusterConfiguration, CorrugatedIron" />
        <section name="riak3NodeConfiguration" type="CorrugatedIron.Config.RiakClusterConfiguration, CorrugatedIron" />
        <section name="riakLoadTestConfiguration" type="CorrugatedIron.Config.RiakClusterConfiguration, CorrugatedIron" />
    </configSections>

    <riak1NodeConfiguration nodePollTime="5000"
                            defaultRetryWaitTime="200"
                            defaultRetryCount="3">
        <nodes>
            <node name="dev1"
                  hostAddress="riak-test"
                  pbcPort="8081"
                  restScheme="http"
                  restPort="8091"
                  poolSize="1" />
                  <!--idleTimeout="1000" />-->
        </nodes>
    </riak1NodeConfiguration>
    <riak3NodeConfiguration nodePollTime="5000"
                            defaultRetryWaitTime="200"
                            defaultRetryCount="3">
        <nodes>
            <node name="dev1"
                  hostAddress="riak-test"
                  pbcPort="8081"
                  restScheme="http"
                  restPort="8091"
                  poolSize="1" />
                  <!--idleTimeout="1000" />-->
            <node name="dev2"
                  hostAddress="riak-test"
                  pbcPort="8082"
                  restScheme="http"
                  restPort="8092"
                  poolSize="1" />
                  <!--idleTimeout="1000" />-->
            <node name="dev3"
                  hostAddress="riak-test"
                  pbcPort="8083"
                  restScheme="http"
                  restPort="8093"
                  poolSize="1" />
                  <!--idleTimeout="1000" />-->
        </nodes>
    </riak3NodeConfiguration>
    <riakLoadTestConfiguration nodePollTime="5000"
                               defaultRetryWaitTime="200"
                               defaultRetryCount="3">
        <nodes>
            <node name="dev1"
                  hostAddress="riak-test"
                  pbcPort="8081"
                  restScheme="http"
                  restPort="8091"
                  poolSize="20" />
                  <!--idleTimeout="1000" />-->
            <node name="dev2"
                  hostAddress="riak-test"
                  pbcPort="8082"
                  restScheme="http"
                  restPort="8092"
                  poolSize="20" />
                  <!--idleTimeout="1000" />-->
            <node name="dev3"
                  hostAddress="riak-test"
                  pbcPort="8083"
                  restScheme="http"
                  restPort="8093"
                  poolSize="20" />
                  <!--idleTimeout="1000" />-->
        </nodes>
    </riakLoadTestConfiguration>
</configuration>
